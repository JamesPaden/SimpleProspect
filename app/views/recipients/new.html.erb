<h1>New Recipient</h1>

<%= form_for([@campaign, @recipient]) do |f| %>
<% if @recipient.errors.any? %>
<div class="alert alert-error">
	<h2><%= pluralize(@recipient.errors.count, "error") %> prohibited this recipient from being saved:</h2>

	<ul>
		<% @recipient.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name, :class => "input-xlarge" %>
</div>
<div class="field">
	<%= f.label :email %>
	<%= f.text_field :email, :class => "input-xlarge" %>
</div>
<div class="field">
	<label>Start Time</label>
	<%= select_datetime(Time.zone.now, { :order => [:month, :day, :year], :prefix => "start_time" },  { :style => "width: auto;" }) %>
</div>
<% unless @template_fields.nil? %>
<% @template_fields.each_key do |template_field| %>
	<div class="field">
		<label><%= template_field %></label>
		<%= text_field_tag template_field, nil, :class => "input-xlarge" %>
	</div>
<% end %>
<% end %>
<div class="actions">
	<%= f.submit nil, :class => "btn btn-primary" %>
</div>
<% end %>


<%= link_to 'Back', campaign_recipients_path %>
